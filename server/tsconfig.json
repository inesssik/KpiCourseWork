{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2023",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "server/node_modules/**/*"
    ]
}